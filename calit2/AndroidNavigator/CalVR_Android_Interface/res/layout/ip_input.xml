<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/calitlogo_">
    
       <EditText android:id="@+id/edit"
        android:layout_width="250px"
        android:layout_height="wrap_content" />
        
    <Button android:id="@+id/addIpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add IP" />
    
    <Button android:id="@+id/removeIpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove IP" />
        
    <Spinner android:id="@+id/idValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ipPrompt" />
        
    <Button android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect" />
</LinearLayout>
